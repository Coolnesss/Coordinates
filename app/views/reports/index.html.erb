<h1>Listing Reports</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Cause</th>
          <th>Position</th>
          <th>Email (reporter)</th>
          <th>Email (position)</th>
          <th>Description</th>
          <th>Options</th>
        </tr>
      </thead>

      <tbody>
        <% @reports.each do |report| %>
        <tr>
          <td><span class="label label-<%= cause_label(report.cause) %>"><%= report.cause.capitalize %></span></td>
          <td><%= link_to report.position.name, report.position, class: "btn btn-xs btn-primary" %></td>
          <td><%= report.email %></td>
          <td><%= report.position.email %></td>
          <td><%= report.description %></td>
          <td><%= link_to 'Ignore', ignore_report_path(report), class: "btn btn-xs btn-danger" %></td>
          <td><%= link_to 'Remove position', report.position, method: :delete, class: "btn btn-xs btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Report', new_report_path, class: "btn btn-success" %>
